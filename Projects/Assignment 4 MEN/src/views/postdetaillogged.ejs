    <div class="container">
        <h1>Post Detail</h1>
    </div>
</div>
<div class="container">
    <div class="card-container">
        <div class="card">
            <div class="card-body">
                <h3 class="font-weight-bold">
                    <%=post.title%>
                </h3>
                <div class="sub-heading form-inline">
                    <span class="text-capitalise">
                        <%=post.user.username%>, </span>
                    <%=post.modifieddate%>
                </div>
                <div class="p-content">
                    <%=post.content%>
                </div>

            </div>
        </div>
    </div>
